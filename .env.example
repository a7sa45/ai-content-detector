# Backend Configuration
PORT=5000
NODE_ENV=production

# API Keys (احصل على المفاتيح من مقدمي الخدمة)
HIVE_API_KEY=your_hive_api_key_here
DEEPWARE_API_KEY=your_deepware_api_key_here
MICROSOFT_API_KEY=your_microsoft_api_key_here

# File Upload Settings
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Railway specific (سيتم تعيينها تلقائياً)
RAILWAY_STATIC_URL=
RAILWAY_PUBLIC_DOMAIN=

# FFmpeg (متوفر على Railway)
FFMPEG_AVAILABLE=true

# Performance
USE_DEEPWARE=false
ENABLE_CACHING=true